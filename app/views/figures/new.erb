<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
  <label>Figure Name: </label><input type="text" name="figure[name]" id="figure_name"> <br></br>

  <label>Titles:</label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>">
    <%=title.name%></input>
  <% end %> <br></br>

  <label>Landmarks:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>">
    <%=landmark.name%></input>
  <% end %> <br></br>

  <label>New Title: </label><input type="text" name="title[name]" id="new_title" placeholder="New Title"> <br></br>

  <label>New Landmark: </label><input type="text" name="landmark[name]" id="new_landmark" placeholder="New Landmark"> <br></br>

  <input type="submit" value="Create New Figure">
</form>
